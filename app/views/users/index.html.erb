<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">

    <%= render 'books/info', user: @user %>

    <div class="row">
    <%= link_to edit_user_path(current_user.id),class: "btn btn-outline-secondary btn-block edit_user_56448" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
    </div>

    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book',class:"btn btn-success"%>
    <% end %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <% @users.each do |user| %>
       <tr>
       <td><%= image_tag user.get_profile_image(80,80)%></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show",user_path(user.id)%></td>
       </tr>
       <% end %>
      </tbody>
     </table>

   </div>
 </div>
</div>
