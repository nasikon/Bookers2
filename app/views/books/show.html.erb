<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">

    <%= render 'info', user: @user %>

    <div class="row">
    <%= link_to edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block edit_user_56448" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
    </div>

    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book',class:"btn btn-success"%>
    <% end %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
     <table class="table">
      <tbody>
       <tr>
       <td><%= link_to user_path(@user.id) do %>
           <%= image_tag @user.get_profile_image(80,80) %>
           <br>
           <%= @user.name %>
           <% end %>
       </td>
       <td><%= link_to @mybook.title, book_path(@mybook.id) %></td>
       <td><%= @mybook.body %></td>
        <% if @mybook.user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@mybook.id), class:"btn btn-sm btn-success" %></td>
       <td><%= link_to "Destroy", book_path(@mybook.id), method: :delete, "data-confirm" => "本当に消しますか?",class:"btn btn-sm btn-danger" %></td>
        <% end %>
       </tr>
      </tbody>
     </table>

   </div>
 </div>
</div>
